  "license": "MIT",
  "homepage": "https://quartz.jzhao.xyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/jackyzha0/quartz.git"
  },
  "keywords": [
    "digital-garden",
    "markdown",
    "blog",
    "quartz"
  ],
  "bin": {
    "quartz": "./build/cli.js"
  },
  "files": [
    "build",
    "template"
  ],
  "scripts": {
    "build": "esbuild index.ts --bundle --banner:js=\"#!/usr/bin/env node\" --external:esbuild --platform=node --outfile=./build/cli.js && npm run copyTemplate",
    "copyTemplate": "cp -r ./template ./build/",
    "link": "npm run build && npm link --no-audit"
  },
  "dependencies": {
    "@inquirer/prompts": "^1.0.3",
    "chalk": "^5.2.0",
    "cli-spinners": "^2.9.0",
    "globby": "^13.1.4",
    "myzod": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-react": "^7.2.0",
    "remark": "^14.0.2",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "rimraf": "^5.0.0",
    "to-vfile": "^7.2.4",
    "unified": "^10.1.2",
    "vfile": "^5.3.7",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/react-dom": "^18.2.4",
    "hast": "^1.0.0"
  }
}
