{
  "name": "quartz",
  "description": "Extensible framework for transpiling various Markdown flavours to HTML",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:cli": "npm run build --workspace ./packages/cli",
    "link:cli": "npm run link --workspace ./packages/cli",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.1.2",
    "@types/yargs": "^17.0.24",
    "esbuild": "0.17.18",
    "typescript": "^5.0.4"
  }
}
